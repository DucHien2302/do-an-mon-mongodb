@model ExperienceDetail

<form action="/useraccount/addexperiencedetail" method="post">
    <div class="row mb-2">
        <label class="col-2" for="jobTitle">Job Title:</label>
        <div class="col-10">
            <input class="form-control" type="text" id="jobTitle" name="JobTitle" />
        </div>
    </div>

    <div class="row mb-2">
        <label class="col-2" for="companyName">Company Name:</label>
        <div class="col-10">
            <input class="form-control" type="text" id="companyName" name="CompanyName" />
        </div>
    </div>

    <div class="row mb-2">
        <label class="col-2" for="startDate">Start Date:</label>
        <div class="col-10">
            <input class="form-control" type="date" id="startDate" name="StartDate" />
        </div>
    </div>

    <div class="row mb-2">
        <label class="col-2" for="endDate">End Date:</label>
        <div class="col-10">
            <input class="form-control" type="date" id="endDate" name="EndDate" />
        </div>
    </div>

    <div class="row mb-2">
        <label class="col-2" for="isCurrentJob">Is Current Job:</label>
        <div class="col-10">
            <input class="form-control" type="checkbox" id="isCurrentJob" name="IsCurrentJob" />
        </div>
    </div>

    <div class="row mb-2">
        <label class="col-2" for="jobLocationCity">Job Location City:</label>
        <div class="col-10">
            <input class="form-control" type="text" id="jobLocationCity" name="JobLocationCity" />
        </div>
    </div>

    <div class="row mb-2">
        <label class="col-2" for="jobLocationState">Job Location State:</label>
        <div class="col-10">
            <input class="form-control" type="text" id="jobLocationState" name="JobLocationState" />
        </div>
    </div>

    <div class="row mb-2">
        <label class="col-2" for="jobLocationCountry">Job Location Country:</label>
        <div class="col-10">
            <input class="form-control" type="text" id="jobLocationCountry" name="JobLocationCountry" />
        </div>
    </div>

    <div class="row mb-2">
        <label class="col-2" for="description">Description:</label>
        <div class="col-10">
            <textarea class="form-control" id="description" name="Description"></textarea>
        </div>
    </div>

    <button class="offset-5 btn btn-outline-primary" type="submit">Thêm Chi Tiết Kinh Nghiệm</button>
    <a href="/useraccount"></a>
</form>
