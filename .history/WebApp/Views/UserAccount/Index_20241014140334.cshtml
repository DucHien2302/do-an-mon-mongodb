@model WebApp.Models.UserAccount

<section id="about" class="about section">
    <div class="container" data-aos="fade-up" data-aos-delay="100">
        <div class="row gy-4 justify-content-center">
            <div class="col-lg-4">
            <img src="/img/profile-img.jpg" class="img-fluid" alt="">
            </div>
            <div class="col-lg-8 content">
            <h2>Infomation</h2>
            <div class="row">
                <div class="col-lg-6">
                    <ul>
                        <li><i class="bi bi-chevron-right"></i> <strong>Email:</strong> <span>@Model.Email</span></li>
                        <li><i class="bi bi-chevron-right"></i> <strong>DateOfBirth:</strong> <span>@Model.DateOfBirth.ToString("dd-MM-yyyy")</span></li>
                        <li><i class="bi bi-chevron-right"></i> <strong>Gender:</strong> <span>@(Model.Gender?"Male":"Female")</span></li>
                        <li><i class="bi bi-chevron-right"></i> <strong>Phone:</strong> <span>@Model.ContactNumber</span></li>
                    </ul>
                </div>
                <div class="col-lg-6">
                    <ul>
                        <li><i class="bi bi-chevron-right"></i> <strong>FirstName</strong> <span>@Model.SeekerProfile?.FirstName</span></li>
                        <li><i class="bi bi-chevron-right"></i> <strong>LastName:</strong> <span>@Model.SeekerProfile?.LastName</span></li>
                        <li><i class="bi bi-chevron-right"></i> <strong>CurrentSalary:</strong> <span>@Model.SeekerProfile?.CurrentSalary</span></li>
                    </ul>
                </div>
            </div>
            <h2>Education</h2>
            @if(Model.EducationDetails != null) {
                @foreach(var item in Model.EducationDetails) {
                    <div class="row">
                        <div class="col-lg-6">
                            <ul>
                                <li><i class="bi bi-chevron-right"></i> <strong>Degree:</strong> <span>@item?.CertificateDegreeName</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>StartDate:</strong> <span>@item?.StartingDate.ToString("dd-MM-yyyy")</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Institute:</strong> <span>@item?.InstituteUniversityName</span></li>
                            </ul>
                        </div>
                    </div>
                }
            } else {
                <div class="row">
                    <div class="col-lg-6">
                        <ul>
                            <li><i class="bi bi-chevron-right"></i> <strong>Degree:</strong> <span></span></li>
                            <li><i class="bi bi-chevron-right"></i> <strong>StartDate:</strong> <span></span></li>
                            <li><i class="bi bi-chevron-right"></i> <strong>Institute:</strong> <span></span></li>
                        </ul>
                    </div>
                </div>
            }
            <h2>Experience</h2>
            @if(Model.ExperienceDetails != null) {
                @foreach(var item in Model.ExperienceDetails) {
                    <div class="row">
                        <div class="col-lg-6">
                            <ul>
                                <li><i class="bi bi-chevron-right"></i> <strong>Job Title:</strong> <span>@item?.CertificateDegreeName</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Company Name:</strong> <span>@item?.StartingDate.ToString("dd-MM-yyyy")</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Start Date:</strong> <span>@item?.InstituteUniversityName</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Location State:</strong> <span>@item?.InstituteUniversityName</span></li>
                            </ul>
                        </div>
                    </div>
                }
            } else {
                <div class="row">
                    <div class="col-lg-6">
                        <ul>
                            <li><i class="bi bi-chevron-right"></i> <strong>Degree:</strong> <span></span></li>
                            <li><i class="bi bi-chevron-right"></i> <strong>StartDate:</strong> <span></span></li>
                            <li><i class="bi bi-chevron-right"></i> <strong>Institute:</strong> <span></span></li>
                        </ul>
                    </div>
                </div>
            }
    </div>
</section>