@model UserAccount

<section id="about" class="about section">
    <div class="container" data-aos="fade-up" data-aos-delay="100">
        <div class="row gy-4 justify-content-center">
            <div class="col-lg-4">
                @if (string.IsNullOrEmpty(Model.UserImage))
                {
                    <img src="/img/profile-img.jpg" class="img-fluid" alt="">
                }
                else
                {

                }
                <div>
                    <input class="form-control mt-2" type="file" name="f">
                </div>
            </div>
            <div class="col-lg-8 content">
                <h2>Infomation</h2>
                <div class="row">
                    <div class="col-lg-6">
                        <ul>
                            <li><i class="bi bi-chevron-right"></i> <strong>Email:</strong>
                                <input class="form-control" type="text" value="@Model.Email">
                            </li>
                            <li><i class="bi bi-chevron-right"></i> <strong>Date Of Birth:</strong>
                                <input class="form-control" type="date"
                                    value="@Model.DateOfBirth.ToString("yyyy-MM-dd")">
                            </li>
                            <li><i class="bi bi-chevron-right"></i> <strong>Gender:</strong>
                                <select class="form-select">
                                    <option value="true">Male</option>
                                    <option value="false">Female</option>
                                </select>
                            </li>
                            <li><i class="bi bi-chevron-right"></i> <strong>Phone:</strong>
                                <input class="form-control" type="text" value="@Model.ContactNumber">
                            </li>
                        </ul>
                    </div>
                    <div class="col-lg-6">
                        <ul>
                            <li><i class="bi bi-chevron-right"></i> <strong>First Name:</strong>
                                <input class="form-control" type="text" value="@Model.SeekerProfile?.FirstName">
                            </li>
                            <li><i class="bi bi-chevron-right"></i> <strong>Last Name:</strong>
                                <input class="form-control" type="text" value="@Model.SeekerProfile?.LastName">
                            </li>
                            <li><i class="bi bi-chevron-right"></i> <strong>Current Salary:</strong>
                                <input class="form-control" type="text" value="@Model.SeekerProfile?.CurrentSalary">
                            </li>
                        </ul>
                    </div>
                </div>

                <h2>Education</h2>
                <div class="row">
                    <div class="col-lg-6">
                        <label for="degree">Degree:</label>
                        <input type="text" class="form-control mb-2" id="degree" value="">
                    </div>
                    <div class="col-lg-6">
                        <label for="start-date">Start Date:</label>
                        <input type="date" class="form-control mb-2" id="start-date" value="">
                    </div>
                    <div class="col-lg-6">
                        <label for="completion-date">Completion Date:</label>
                        <input type="date" class="form-control mb-2" id="completion-date" value="">
                    </div>
                    <div class="col-lg-6">
                        <label for="institute">Institute:</label>
                        <input type="text" class="form-control mb-2" id="institute" value="">
                    </div>
                    <div class="col-lg-6">
                        <label for="percentage">Percentage:</label>
                        <input type="text" class="form-control mb-2" id="percentage" value="">
                    </div>
                    <div class="col-lg-6">
                        <label for="cgpa">CGPA:</label>
                        <input type="text" class="form-control mb-2" id="cgpa" value="">
                    </div>
                </div>

                <h2>Experience</h2>
                <div class="row">
                    <div class="col-lg-6">
                        <label for="job-title">Job Title:</label>
                        <input type="text" class="form-control mb-2" id="job-title" value="">
                    </div>
                    <div class="col-lg-6">
                        <label for="company-name">Company Name:</label>
                        <input type="text" class="form-control mb-2" id="company-name" value="">
                    </div>
                    <div class="col-lg-6">
                        <label for="start-date-exp">Start Date:</label>
                        <input type="date" class="form-control mb-2" id="start-date-exp" value="">
                    </div>
                    <div class="col-lg-6">
                        <label for="end-date-exp">End Date:</label>
                        <input type="date" class="form-control mb-2" id="end-date-exp" value="">
                    </div>
                    <div class="col-lg-6">
                        <label for="location-state">Location State:</label>
                        <input type="text" class="form-control mb-2" id="location-state" value="">
                    </div>
                    <div class="col-lg-6">
                        <label for="location-country">Location Country:</label>
                        <input type="text" class="form-control mb-2" id="location-country" value="">
                    </div>
                    <div class="col-lg-12">
                        <label for="description">Description:</label>
                        <textarea class="form-control mb-2" id="description"></textarea>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
