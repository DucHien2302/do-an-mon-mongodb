@model UserAccount
@using System.Globalization

<partial name="_Msg" />

<!-- About Section -->
<section id="about" class="about section">

  <!-- Section Title -->
  <div class="container section-title" data-aos="fade-up">
    <h2>About</h2>
  </div><!-- End Section Title -->

  <div class="container" data-aos="fade-up" data-aos-delay="100">

    <div class="row gy-4 justify-content-center">
      <div class="col-lg-4">
        @if (string.IsNullOrEmpty(Model?.UserImage))
        {
          <img src="/img/profile-img.jpg" class="img-fluid" alt="">
        }
        else
        {
          <img src="/img/@Model.UserImage" class="img-fluid" alt="User Image">
        }
      </div>
      <div class="col-lg-8 content">
        <h2>Information</h2>
        <p>This section provides detailed information about the user, including their personal details, current salary,
          and other relevant data.</p>
        <div class="row">
          <div class="col-lg-6">
            <ul>
              <li><i class="bi bi-chevron-right"></i> <strong>Email:</strong> <span>@(Model?.Email ?? "N/A")</span></li>
              <li><i class="bi bi-chevron-right"></i> <strong>Date of birth:</strong>
                <span>@Model?.DateOfBirth?.ToString("dd-MM-yyyy") ?? "N/A"</span>
              </li>
              <li><i class="bi bi-chevron-right"></i> <strong>Gender:</strong> <span>@(Model.Gender ?? "N/A")</span>
              </li>
              <li><i class="bi bi-chevron-right"></i> <strong>Contact number:</strong> <span>@(Model?.ContactNumber ??
                  "N/A")</span></li>
            </ul>
          </div>
          <div class="col-lg-6">
            <ul>
              <li><i class="bi bi-chevron-right"></i> <strong>First name:</strong>
                <span>@(Model?.SeekerProfile?.FirstName ?? "N/A")</span>
              </li>
              <li><i class="bi bi-chevron-right"></i> <strong>Last name:</strong>
                <span>@(Model?.SeekerProfile?.LastName ?? "N/A")</span>
              </li>
              <li><i class="bi bi-chevron-right"></i> <strong>Age:</strong>
                <span>@(Model?.DateOfBirth.HasValue ? DateTime.Now.Year - Model.DateOfBirth.Value.Year : "N/A")</span>
              </li>
              <li><i class="bi bi-chevron-right"></i> <strong>Current salary:</strong>
                <span>@Model?.SeekerProfile?.CurrentSalary?.ToString("N", new CultureInfo("de-DE")) ?? "N/A" VNĐ</span>
              </li>
            </ul>
          </div>
        </div>
        <div class="row mt-4">
          <div class="col-lg-12">
            <p>This section provides a brief summary of the user's information. The user,
              @(Model?.SeekerProfile?.FirstName ?? "N/A") @(Model?.SeekerProfile?.LastName ?? "N/A"), is currently
              @(Model?.DateOfBirth.HasValue ? DateTime.Now.Year - Model.DateOfBirth.Value.Year : "N/A") years old and
              earns a salary of @(Model?.SeekerProfile?.CurrentSalary?.ToString("N", new CultureInfo("de-DE")) ?? "N/A")
              VNĐ.</p>
          </div>
        </div>
      </div>
    </div>
  </div>

</section><!-- /About Section -->

<!-- Skills Section -->
<section id="skills" class="skills section">

  <!-- Section Title -->
  <div class="container section-title" data-aos="fade-up">
    <h2>Skills</h2>
