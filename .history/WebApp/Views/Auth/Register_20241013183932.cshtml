@model UserRegister

<partial name="_Msg"/>

<section class="vh-100">
  <div class="container-fluid h-custom">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-md-9 col-lg-6 col-xl-5">
        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
          class="img-fluid" alt="Sample image">
      </div>
      <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
        <div asp-validation-summary="All"></div>
        <form method="post">
          <!-- Email input -->
          <div data-mdb-input-init class="row form-outline mb-4">
                <input type="email" asp-for="Email" class="form-control form-control-lg"
                placeholder="Enter a valid email address" />
        </div>
          

          <!-- Password input -->
          <div data-mdb-input-init class="row form-outline mb-3">
                <input type="password" asp-for="Password" class="form-control form-control-lg"
                placeholder="Enter password" />
            </div>

          <!-- Phone input -->
          <div data-mdb-input-init class="row form-outline mb-3">
                <input type="text" asp-for="ContactNumber" class="form-control form-control-lg"
                placeholder="Enter Phone" />
            </div>

          <!-- Account type input -->
          <div data-mdb-input-init class="row form-outline mb-3">
                <select asp-for="UserTypeId" class="form-select form-select-lg">
                  if(@ViewBag.userTypes != null) {
                    @foreach(UserType item in ViewBag.userTypes) {
                      <option value="@item.Id">@item.UserTypeName</option>
                    }
                  }
                </select>
            </div>

          <div class="text-center text-lg-start mt-4 pt-2">
            <button data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-lg"
              style="padding-left: 2.5rem; padding-right: 2.5rem;">Register</button>
            <p class="small fw-bold mt-2 pt-1 mb-0">Have an account? <a href="/auth/login"
                class="link-danger">Login</a></p>
          </div>

        </form>
      </div>
    </div>
  </div>
</section>